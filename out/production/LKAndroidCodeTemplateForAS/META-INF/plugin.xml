<idea-plugin>
  <id>com.galaxybruce.plugin.lkanroidcodetemplate.id</id>
  <name>LKAndroidCodeTemplateForAS</name>
  <version>1.0.0</version>
  <vendor email="brucezhanggood@gmail.com" url="https://github.com/galaxybruce">Galaxybruce</vendor>

  <description><![CDATA[
      Template Code Generator for Android<br>
      How to use:<br>
      Select the package folder, right click -> New -> LKAndroidCodeTemplate
      <em></em>
    ]]></description>

  <change-notes><![CDATA[
      Changes: <br>
      1. basic feature release <br>
      <em></em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <group id="LKAndroidCodeTemplate.ID"
      text="LKAndroidCodeTemplate"
      icon="/image/lk_icon.png"
      popup="true"
      description="a plugin to generate android template code">

      <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewDir"/>

      <action id="LKAndroidPageTemplate.ID"
            class="com.galaxybruce.plugin.lk.AndroidPageTemplateAction"
            text="Page Template"
            icon="/image/lk_icon.png"
            description="a plugin to generate android page template code">
      </action>

      <action id="LKAndroidDialogTemplate.ID"
              class="com.galaxybruce.plugin.lk.AndroidDialogTemplateAction"
              text="Dialog Template"
              icon="/image/lk_icon.png"
              description="a plugin to generate android dialog template code">
      </action>


    </group>

  </actions>

</idea-plugin>