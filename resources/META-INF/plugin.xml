<idea-plugin>
  <id>com.galaxybruce.plugin.lkanroidcodetemplate.id</id>
  <name>LKAndroidCodeTemplateForAS</name>
  <version>1.0.0</version>
  <vendor email="brucezhanggood@gmail.com" url="https://github.com/galaxybruce">Galaxybruce</vendor>

  <description><![CDATA[
      <h1>Template Code Generator for Android</h1><br>
      How to use:<br>
      Select the package folder, right click -> New -> LKAndroidCodeTemplate
      <em></em>
    ]]></description>

  <change-notes><![CDATA[
      Changes: <br>
      1. basic feature release <br>
      <em></em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <group>
      <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewDir"/>

      <separator/>
      <!-- generate android code file action group -->
      <group id="LKAndroidCodePlugin.FileTemplate.ID"
        text="LKAndroidCodeTemplate"
        icon="/image/lk_icon.png"
        popup="true"
        class="com.galaxybruce.plugin.groups.GenerateAndroidCodeGroup"
        description="a plugin to generate android template code">

        <action id="LKAndroidCodePlugin.PageFileTemplate.ID"
              class="com.galaxybruce.plugin.lk.AndroidPageTemplateAction"
              text="Page Template"
              icon="/image/lk_icon.png"
              description="a plugin to generate android page template code">
        </action>

        <action id="LKAndroidCodePlugin.DialogFileTemplate.ID"
                class="com.galaxybruce.plugin.lk.AndroidDialogTemplateAction"
                text="Dialog Template"
                icon="/image/lk_icon.png"
                description="a plugin to generate android dialog template code">
        </action>
      </group>
      <separator/>
    </group>


    <group>
      <add-to-group group-id="GenerateGroup" anchor="last" />

      <separator/>
      <!-- generate android code snippet action group -->
      <action id="LKAndroidCodePlugin.SnippetTemplate.ID"
              class="com.galaxybruce.plugin.lk.snippet.AndroidCodeSnippetAction"
              text="LKAndroidCodeSnippet"
              icon="/image/lk_icon.png"
              description="a plugin to generate android code snippet">
      </action>

      <separator/>
    </group>


  </actions>

</idea-plugin>